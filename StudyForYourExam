    <div id="topBar">
      <div id="currentGameTitle">Select a game from the left</div>
      <div id="controls">
        <button class="btn" onclick="reloadGame()">Reload</button>
        <button class="btn" onclick="goFullscreen()">Fullscreen</button>
      </div>
    </div>
    <iframe id="gameFrame" src=""></iframe>
  </div>

  <script>
    function loadGame(url) {
      const frame = document.getElementById('gameFrame');
      frame.src = url;
      const clicked = event.currentTarget;
      const title = clicked.getAttribute('data-title') || 'Game';
      document.getElementById('currentGameTitle').textContent = title;
    }

    function reloadGame() {
      const frame = document.getElementById('gameFrame');
      if (frame.src) {
        frame.src = frame.src;
      }
    }

    function goFullscreen() {
      const viewer = document.getElementById('viewer');
      if (viewer.requestFullscreen) viewer.requestFullscreen();
      else if (viewer.webkitRequestFullscreen) viewer.webkitRequestFullscreen();
      else if (viewer.msRequestFullscreen) viewer.msRequestFullscreen();
    }

    function filterGames() {
      const query = document.getElementById('searchBox').value.toLowerCase();
      const games = document.querySelectorAll('.game');
      games.forEach(g => {
        const title = g.getAttribute('data-title').toLowerCase();
        g.style.display = title.includes(query) ? 'flex' : 'none';
      });
    }
  </script>

</body>
</html>
